#!/bin/bash
THRESHOLD=${THRESHOLD-85} # In percent, change if needed

df -H -T -x devtmpfs -x tmpfs -x efivarfs -x tmpfs | awk 'NR > 1' |
	awk '$6 > "'$THRESHOLD'" {print}' |
	while read -r output; do
		echo $output | awk '{ print "ðŸ’¾: " $6 ", ðŸ’¿: " $1}'
	done
